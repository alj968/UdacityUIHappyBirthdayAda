<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alj968.android.udacityuihappybirthdayada.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ada_lovelace"
    />

    <TextView
        android:id="@+id/text_view_date"
        style="@style/SmallTextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/date"
        android:textColor="@android:color/white"
    />

    <TextView
        style="@style/TextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_date"
        android:layout_centerHorizontal="true"
        android:text="@string/greeting"
        android:textColor="@android:color/white"
    />

    <TextView
        style="@style/TextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_view_face"
        android:layout_alignParentLeft="true"
        android:text="@string/signature"
        android:textColor="@android:color/white"
    />

    <ImageView android:id="@+id/image_view_face"
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_margin="6dp"
               android:scaleType="centerCrop"
               android:src="@drawable/my_face"
    />


</RelativeLayout>
